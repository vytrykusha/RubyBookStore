<div class="card shadow p-4 mb-4">
  <div class="row g-4 align-items-center">
    <!-- Відображення обкладинки книги (поле cover) -->
    <% if @book.cover.present? %>
      <div class="col-md-3 text-center">
        <img src="<%= @book.cover %>" alt="Обкладинка" class="img-fluid rounded mb-3 mb-md-0 shadow-sm" style="max-height: 300px;">
      </div>
    <% end %>
    <div class="col">
      <h1 class="h3 mb-3"><%= @book.title %></h1>
      <p class="mb-2"><strong>Автор:</strong> <%= @book.author %></p>
      <p class="mb-2"><strong>Категорія:</strong> 
        <% if @book.category.present? %>
          <span class="badge bg-gradient-category"><%= @book.category %></span>
        <% else %>
          <span class="text-muted">—</span>
        <% end %>
      </p>
      <p class="mb-2"><strong>Знижка:</strong> 
        <% if @book.discount.to_f > 0 %>
          <span class="badge bg-gradient-discount">-<%= @book.discount.to_i %>%</span>
        <% else %>
          <span class="text-muted">—</span>
        <% end %>
      </p>
      <p class="mb-2"><strong>Ціна:</strong> <%= number_to_currency(@book.price, unit: "$") %></p>
      <% if @book.respond_to?(:description) && @book.description.present? %>
        <p class="mb-2"><strong>Опис:</strong> <%= @book.description %></p>
      <% end %>
      <div class="mt-4 d-flex">
        <%= link_to "Редагувати", edit_admin_book_path(@book), class: "btn btn-outline-primary me-2" %>
        <%= button_to "Видалити",
            admin_book_path(@book),
            method: :delete,
            data: { turbo_confirm: "Ви впевнені?" },
            class: "btn btn-outline-danger" %>
        <%= link_to "⬅ До списку книг", admin_books_path, class: "btn btn-outline-secondary ms-2" %>
      </div>
    </div>
  </div>
</div>
