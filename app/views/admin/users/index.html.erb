<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">Користувачі</h1>
  <!--
  <%= link_to "Додати користувача", new_admin_user_path, class: "btn btn-success" %>
  -->
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover align-middle bg-white border rounded shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Роль</th>
        <th>Створено</th>
        <!-- <th class="text-center">Дії</th> -->
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= l(user.created_at, format: :short) %></td>
          <!--
          <td class="text-center">
            <%= link_to "Редагувати", edit_admin_user_path(user), class: "btn btn-sm btn-outline-primary me-2" %>
            <%= link_to "Видалити", admin_user_path(user), method: :delete, data: { confirm: "Ви впевнені?" }, class: "btn btn-sm btn-outline-danger" %>
          </td>
          -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
