<h1>Управління замовленнями</h1>

<% @orders.each do |order| %>
  <h3>Замовлення №<%= order.id %> від <%= order.created_at.strftime("%d.%m.%Y") %></h3>
  <p>Користувач: <%= order.user.email %></p>
  <p>Статус: <%= order.status %></p>
  <ul>
    <% order.order_items.each do |item| %>
      <li><%= item.book.title %> — <%= item.quantity %> шт × <%= item.unit_price %> грн</li>
    <% end %>
  </ul>
  <p><strong>Разом:</strong> <%= order.total_price %> грн</p>

  <%= button_to "Позначити як виконане", admin_order_path(order, status: "done"), method: :patch %>
  <%= button_to "Скасувати", admin_order_path(order, status: "cancelled"), method: :patch %>
  <hr>
<% end %>
