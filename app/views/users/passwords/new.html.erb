<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow p-4" style="min-width: 350px; max-width: 400px; width: 100%;">
    <h1 class="h4 mb-4 text-center">Відновлення пароля</h1>
    <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), class: "") do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label fw-bold" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <%= f.submit "Надіслати інструкцію", class: "btn btn-success w-100" %>
    <% end %>
    <div class="mt-3 text-center">
      <%= link_to "Повернутися до входу", new_user_session_path, class: "small" %>
    </div>
  </div>
</div>
