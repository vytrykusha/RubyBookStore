<%= form_with(model: book, local: true, class: "card shadow p-4") do |form| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(book.errors.count, "помилка") %> не дозволяють зберегти книгу:</h5>
      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "Назва книги", class: "form-label fw-bold" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Введіть назву" %>
  </div>

  <div class="mb-3">
    <%= form.label :author, "Автор", class: "form-label fw-bold" %>
    <%= form.text_field :author, class: "form-control", placeholder: "Ім’я автора" %>
  </div>

  <div class="mb-3">
    <%= form.label :price, "Ціна", class: "form-label fw-bold" %>
    <%= form.number_field :price, step: 0.01, class: "form-control", placeholder: "$" %>
  </div>

  <div class="mb-3">
    <%= form.label :stock, "Наявність", class: "form-label fw-bold" %>
    <%= form.number_field :stock, class: "form-control", placeholder: "Кількість на складі" %>
  </div>

  <div class="mb-3">
    <%= form.label :cover, "Обкладинка (URL)", class: "form-label fw-bold" %>
    <%= form.text_field :cover, class: "form-control", placeholder: "https://..." %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Опис", class: "form-label fw-bold" %>
    <%= form.text_area :description, class: "form-control", rows: 5, placeholder: "Короткий опис книги" %>
  </div>

  <div class="d-flex">
    <%= form.submit "Зберегти", class: "btn btn-primary" %>
    <%= link_to "Назад", books_path, class: "btn btn-outline-secondary ms-2" %>
  </div>
<% end %>
